<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.surendra535268.customeronboard.MainActivity"
    android:background="#f0f0f0">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/textFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/userDataMargin"
                        android:background="@drawable/text_view_layout"
                        android:padding="@dimen/userDataMargin"
                        android:textSize="@dimen/mainActivityTextSize"/>

                    <TextView
                        android:id="@+id/textLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/userDataMargin"
                        android:padding="@dimen/userDataMargin"
                        android:background="@drawable/text_view_layout"
                        android:textSize="@dimen/mainActivityTextSize"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgPerson"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/userDataMargin"
                        android:background="@drawable/person"
                        android:contentDescription="@string/strImgPerson" />

                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/editAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:padding="@dimen/userDataMargin"
                android:inputType="textPostalAddress"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>

            <EditText
                android:id="@+id/editAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:padding="@dimen/userDataMargin"
                android:inputType="textPostalAddress"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>

            <EditText
                android:id="@+id/editPIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:padding="@dimen/userDataMargin"
                android:inputType="number"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>

            <EditText
                android:id="@+id/editAltCntNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:padding="@dimen/userDataMargin"
                android:inputType="phone"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>


            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:padding="@dimen/userDataMargin"
                android:inputType="textEmailAddress"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/userDataMargin"
                android:text="@string/verifyText"
                android:padding="@dimen/userDataMargin"
                android:background="@drawable/text_view_layout"
                android:textSize="@dimen/mainActivityTextSize"/>

        </LinearLayout>
    </ScrollView>
 </RelativeLayout>